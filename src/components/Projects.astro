---
const projects = [
  {
    title: "PortTales - En construcción",
    description:
      "Ofrezco servicios de creación de sitios web de una sola página utilizando Astro, una herramienta que permite desarrollar páginas rápidas y optimizadas. Me enfoco en diseñar experiencias atractivas y funcionales que ayuden a las empresas a destacar en línea y conectar con su audiencia.",
    image: "/projects/porttales.webp",
    link: "https://porttales.vercel.app",
    github: "https://github.com/JaviiAzagra/porttales",
    utilities: ["Astro", "TailwindCSS"],
  },
  {
    title: "TK Keyboards",
    description:
      "Este proyecto consiste en el desarrollo de una página web interactiva dedicada a la venta de teclados mecánicos. La web permite a los usuarios explorar una amplia gama de productos, visualizar detalles técnicos y realizar compras de manera intuitiva.",
    image: "/projects/tkkeyboards.webp",
    link: "https://tk-keyboards.vercel.app/",
    github: "https://github.com/JaviiAzagra/Tk-Keyboards",
    utilities: ["React", "Node.js", "Express", "MongoDB"],
  },
  {
    title: "Mestre Cabreta",
    description:
      "He desarrollado una plataforma de educación en línea multilingüe para un cliente, que ofrece artículos e información accesibles en varios idiomas. Los usuarios pueden iniciar sesión para dejar comentarios y compartir sus opiniones sobre el contenido. ",
    image: "/projects/mestrecabreta.webp",
    link: "https://www.mestrecabreta.com",
    utilities: ["React", "Node.js", "Express", "MongoDB"],
  },
  {
    title: "TkCoder",
    description:
      "He creado una plataforma web dedicada a ofrecer tutoriales y artículos informativos para desarrolladores. Esta web tiene como objetivo proporcionar recursos accesibles que ayuden a los usuarios a mejorar sus habilidades técnicas y a mantenerse actualizados con las tendencias del sector.",
    image: "/projects/tkcoder.webp",
    link: "https://tkcoder.vercel.app/",
    github: "https://github.com/JaviiAzagra/tkcoder.dev",
    utilities: ["React"],
  },
];

const colorMap: { [key: string]: string } = {
  React: "bg-[#60dbfb] text-black",
  "Node.js": "bg-green-500 text-black",
  Express: "bg-gray-500 text-font",
  MongoDB: "bg-green-800 text-font",
  Astro: "bg-purple-500 text-font",
  TailwindCSS: "bg-[#013158] text-font",
};
---

<section class="flex flex-col items-center justify-center gap-y-12 pt-20">
  <div>
    <h2 class="text-5xl">Proyectos</h2>
  </div>
  <div class="grid grid-cols-1 gap-y-11 max-w-[800px] p-3">
    {
      projects.map((project) => (
        <div class="flex flex-col gap-10 md:flex-row items-center ">
          <div>
            <img
              class=" rounded-xl max-w-[380px]"
              src={project.image}
              alt={project.title}
            />
          </div>
          <div class="h-full flex flex-col gap-4 ">
            <h3 class="text-xl">{project.title}</h3>
            <div class="flex gap-2">
              {project.utilities.map((util: string) => (
                <span
                  class={`text-xs  px-3 py-1 rounded-xl ${
                    colorMap[util] || "bg-orange"
                  } `}
                >
                  {util}
                </span>
              ))}
            </div>
            <p class="text-sm text-font2">{project.description}</p>
            <div class="flex gap-4">
              <a
                class="flex items-center gap-x-1 text-xs px-4 py-2 border border-orange rounded-xl text-black bg-orange hover:border-white hover:bg-bgcolor hover:text-white"
                href={project.link}
                target="_blank"
                rel="norreferer"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="icon icon-tabler icons-tabler-outline icon-tabler-link"
                >
                  <>
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M9 15l6 -6" />
                    <path d="M11 6l.463 -.536a5 5 0 0 1 7.071 7.072l-.534 .464" />
                    <path d="M13 18l-.397 .534a5.068 5.068 0 0 1 -7.127 0a4.972 4.972 0 0 1 0 -7.071l.524 -.463" />
                  </>
                </svg>
                Preview
              </a>
              {project.github && (
                <a
                  class="flex items-center gap-x-1 text-xs px-4 py-2 border border-orange rounded-xl text-black bg-orange hover:border-white hover:bg-bgcolor hover:text-white"
                  href={project.github}
                  target="_blank"
                  rel="norreferer"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github"
                  >
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
                  </svg>
                  GitHub
                </a>
              )}
            </div>
          </div>
        </div>
      ))
    }
  </div>
  <div>
    <a
      class="text-font underline text-start w-full hover:text-orange"
      href="https://github.com/JaviiAzagra?tab=repositories"
      target="_blank"
      rel="norreferer">Ver mas</a
    >
  </div>
</section>
